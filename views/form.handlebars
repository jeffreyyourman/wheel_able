
<form class="" action="/companyInfo" method="post">
  <div class="form-group">
    <label for="usr">Name of destination:</label>
    <input placeholder='Business: Club, Bar, restaurant, etc' type="text" class="form-control" id="usr">
  </div>
  <div class="form-group">
    <label for="usr">Address:</label>
    <input placeholder='company address' type="text" class="form-control" id="usr">
  </div>
  <div class="radio accessible ">
    <label><input type="checkbox" name="AccessibleRadio">Accessible</label>
  </div>
  <div class="accessibleAdditions">
    <div class="radio accessibleElevator ">
      <label><input type="checkbox" name="elevatorRadio">Elevator</label>
    </div>
    <div class="radio accessibleRamp ">
      <label><input type="checkbox" name="rampRadio">Ramp</label>
    </div>
    <div class="radio accessibleStairs ">
      <label><input type="checkbox" name="stairsRadio">Stairs</label>
    </div>
  </div>
  <div class="form-group">
    <label for="usr">Reason:</label>
    <textarea placeholder='Why is this company accessible or not accessible' class="form-control" rows="5" id="comment"></textarea>
  </div>
  <input type="submit" class="btn btn-info" value="Submit Button">
</form>
